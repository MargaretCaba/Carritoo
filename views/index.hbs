    <center><h1 class="Header_tabla">Instrumentos Disponibles</h1></center>
    <center>
    <table class="table table-borderless" id="Tabla-productos" border="1">
        <tr> <!-- Headers de la tabla -->
            <th>Productos</th>
            <th>Precio</th>
            <th>Descripcion</th>
            <th>Cantidad</th>
        </tr>
        {{#each productos}}
            <tr>
                <td>{{this.nombre}}</td>
                <td>{{this.precio}}{{this.moneda}}</td>
                <td>{{this.Descripcion}}</td>
                <td>
                    <form action="/agregar-carrito" method="POST">
                        <input type="hidden" name="productoId" value="{{this.id}}">
                        <input type="number" name="cantidad" placeholder="cantidad" min="1" max="{{this.cantidad}}" style="width: 50px;">
                        <br>
                        <button type="submit" class="btn btn-warning" >Agregar al Carrito <i class="fas fa-cart-plus"></i></button>
                    </form>
                </td>
            </tr>
        {{/each}}
